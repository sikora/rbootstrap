<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin" }) do |f| %>
  <h2>Entrar</h2>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, placeholder:"Digite seu email", input_html: {class: 'input-block-level'} %>
    <%= f.input :password, :required => false, placeholder:"Digite sua senha", input_html: {class: 'input-block-level'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Logar", class:"btn btn-primary button-login" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
