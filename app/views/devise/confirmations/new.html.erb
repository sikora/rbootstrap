<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }, :html => { :class => "form-signin" }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>
  <h2>Resend confirmation instructions</h2>
  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, input_html: {class: 'input-block-level'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation instructions", class:"btn btn-primary button-login" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
