<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :html => { :class => "form-signin" }) do |f| %>
  <%= f.error_notification %>
  <h2>Editar usuário</h2>
  <div class="form-inputs">
    <%= f.input :email, label: "E-mail", :required => true, :autofocus => true, input_html: {class: 'input-block-level'} %>

    <%= f.input :role, as: :select, collection: ['admin', 'aprovador', 'solicitante'], prompt: 'Escolha o tipo de usuário', label: "Tipo de usuário", :required => (@adicionar ? true : false), :disabled => (current_user.id == @user.id ? true : false), input_html: {class: 'input-block-level'} %>

    <%= f.input :password, :autocomplete => "off", :required => false, input_html: {class: 'input-block-level'} %>
    <%= f.input :password_confirmation, :required => false, input_html: {class: 'input-block-level'}, label:"Digite seu password novamente" %>
    <%= f.input :current_password, :hint => "Digite sua senha atual para confirmar as mudanças", :required => true, input_html: {class: 'input-block-level'}, label:"Password atual" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class:"btn btn-primary button-login" %>
  </div>
<% end %>