= simple_form_for(@user, :url => admin_path(@user), html: {class: 'form-horizontal' }) do |f|
  = f.error_notification

  .inputs
    = f.input :email, :required => true, :autofocus => true, :label => "E-mail", input_html: {class: "span9"}
    = f.input :role, as: :select, collection: ['admin', 'aprovador', 'solicitante'], prompt: 'Escolha o tipo de usuário', label: "Tipo de usuário", :required => (@adicionar ? true : false), :disabled => (current_user.id == @user.id ? true : false), input_html: {class: "span9"}
    = f.input :password, :required => (@adicionar ? true : false), :label => "Senha", input_html: {class: "span9"}
    = f.input :password_confirmation, :required => (@adicionar ? true : false), :label => "Confirme sua senha", input_html: {class: "span9"}

  .form-actions
    /= f.button :submit, class:"btn btn btn-warning"
    %button.btn.btn-warning{type: 'submit'}
      ="#{@adicionar ? 'Cadastrar' : 'Editar'} Usuário"
    %a.btn.btn-info{href: admin_index_path}
      %i.icon-caret-left
      Voltar